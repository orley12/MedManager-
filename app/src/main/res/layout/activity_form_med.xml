<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.med_manager.MedFormActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:text="@string/med_name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/med_name"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="72dp"
        android:background="@color/edit_text_background_color"
        android:ems="10"
        android:hint="@string/med_name_hint_text"
        android:inputType="textPersonName"
        android:paddingLeft="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/med_type"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Spinner
        android:id="@+id/spinner_med_type"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/med_name"
        app:layout_constraintStart_toStartOf="@+id/med_name"
        app:layout_constraintTop_toBottomOf="@+id/med_name" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/med_description"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/med_description"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/edit_text_background_color"
        android:ems="10"
        android:hint="@string/med_description"
        android:inputType="textPersonName"
        android:paddingLeft="3dp"
        app:layout_constraintEnd_toEndOf="@+id/med_name"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="@+id/med_name"
        app:layout_constraintTop_toBottomOf="@+id/spinner_med_type" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/dosage"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/med_dosage"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/edit_text_background_color"
        android:ems="10"
        android:hint="@string/dosage_hint_text"
        android:inputType="number"
        android:paddingLeft="3dp"
        app:layout_constraintEnd_toEndOf="@+id/med_name"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/med_description" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/interval"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Switch
        android:id="@+id/switch_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleX="0.5"
        android:textOff="Hours"
        android:textOn="Minutes"
        app:layout_constraintEnd_toEndOf="@+id/med_dosage"
        app:layout_constraintStart_toStartOf="@+id/med_dosage"
        app:layout_constraintTop_toBottomOf="@+id/med_dosage" />

    <EditText
        android:id="@+id/med_interval"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:background="@color/edit_text_background_color"
        android:ems="10"
        android:hint="@string/interval_hint_text"
        android:inputType="number"
        android:paddingLeft="3dp"
        app:layout_constraintEnd_toEndOf="@+id/med_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/switch_interval"
        app:layout_constraintTop_toBottomOf="@+id/med_description" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="@string/start_date"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/med_interval" />

    <EditText
        android:id="@+id/med_start_date"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:background="@color/edit_text_background_color"
        android:editable="false"
        android:ems="10"
        android:hint="@string/start_date_hint_text"
        android:inputType="none"
        android:paddingLeft="3dp"
        app:layout_constraintEnd_toEndOf="@+id/med_dosage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/switch_interval" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="@string/end_date"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/med_start_date"
        app:layout_constraintTop_toBottomOf="@+id/med_interval" />

    <EditText
        android:id="@+id/med_end_date"
        android:layout_width="68dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:background="@color/edit_text_background_color"
        android:editable="false"
        android:ems="10"
        android:hint="@string/end_date_hint_text"
        android:inputType="none"
        android:paddingLeft="3dp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/med_interval" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Start Time"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/switch_interval" />

    <EditText
        android:id="@+id/start_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="@color/edit_text_background_color"
        android:inputType="none"
        android:editable="false"
        android:hint="@string/start_time"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/med_interval"
        android:layout_marginLeft="76dp" />

</android.support.constraint.ConstraintLayout>
